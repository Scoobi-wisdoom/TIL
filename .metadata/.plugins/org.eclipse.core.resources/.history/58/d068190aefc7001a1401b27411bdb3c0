package str;

import java.util.Arrays;

public class Str3 {
	
	public static void main(String args[]) {
		String email = "jmlee@tonesol.com";
		// id 와 domain(tonesol)을 분리하여 스트링을 만드시오.
		// id 와 domain을 출력하시오.
		int index_loc = 0;
		index_loc = email.indexOf("@");
		System.out.println(email.substring(index_loc+1, email.length()));
		char [] c = email.toCharArray();
		System.out.println(c);
	}

}
