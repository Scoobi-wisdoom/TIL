package forwhile;

public class For3 {
	public static void main(String[] args) {
		System.out.println("Start ...");
		int sum = 0;
		int count = 0;
		// 짝수의 합과 평균을 구하시오.
		for(int i=2; i<=10; i+=2) {
			sum += i;
			count++;
		}
		System.out.println(sum);
		System.out.println((float)sum/count+", "+count);
	}
}
